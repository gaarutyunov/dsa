{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true,
		"noImplicitOverride": true
	},
	"lint": {
		"files": {
			"include": ["src/"],
			"exclude": ["src/testdata/"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"files": {
			"include": ["src/"],
			"exclude": ["src/testdata/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	},
	"test": {
		"files": {
			"include": ["src/"],
			"exclude": ["src/testdata/", "src/helpers/test_helpers.ts"]
		}
	}
}
